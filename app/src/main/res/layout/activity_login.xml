<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.calojy.ui2.login">

    <EditText
        android:id="@+id/elog"
        android:layout_width="318dp"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:alpha="0.4"
        android:background="@android:color/black"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/plog"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/plog"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="143dp"
        android:layout_weight="1"
        android:alpha="0.4"
        android:background="@android:color/black"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/elog"
        app:layout_constraintRight_toRightOf="@+id/elog"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/logbtn"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginEnd="111dp"
        android:layout_weight="1"
        android:alpha="0.7"
        app:srcCompat="@drawable/loginbtn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/plog"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@+id/elog"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toLeftOf="@+id/fg"
        android:layout_marginLeft="112dp"
        android:layout_marginRight="111dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="118dp"
        android:layout_height="27dp"
        android:layout_marginLeft="318dp"
        android:layout_marginStart="318dp"
        android:layout_marginTop="49dp"
        android:layout_weight="1"
        android:paddingRight="5dp"
        android:text="REGISTER"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logbtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:textColor="@android:color/white"
        tools:layout_editor_absoluteX="279dp" />

    <TextView
        android:id="@+id/fg"
        android:layout_width="161dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="182dp"
        android:layout_weight="1"
        android:text="FORGOT PASSWORD"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elog"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:textColor="@android:color/white" />

</android.support.constraint.ConstraintLayout>
